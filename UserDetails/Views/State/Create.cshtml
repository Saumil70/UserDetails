@model State

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create State</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form action="State/Create" method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>


                <div class="form-floating py-2 col-12">
                    <input asp-for="StateName" class="form-control border-0 shadow" />
                    <label asp-for="StateName" class="ms-2"></label>
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="CountryId" class="form-control border-0 shadow" asp-items="ViewBag.CountryList">
                        <option value="">Select Country</option>
                    </select>
                    <label asp-for="CountryId" class="ms-2"></label>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>


                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Country" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>




