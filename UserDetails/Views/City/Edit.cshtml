@model City

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit City</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form action="City/Edit" method="post">
            <div class="border p-3 mt-4">

                @* <div asp-validation-summary="ModelOnly"></div> *@
                <input asp-for="CityId" hidden />

                <div class="form-floating py-2 col-12">
                    <input asp-for="CityName" class="form-control border-0 shadow" />
                    <label asp-for="CityName" class="ms-2"></label>
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="StateId" class="form-control border-0 shadow" asp-items="ViewBag.StateList">
                        <option value="">Select State</option>
                    </select>
                    <label asp-for="StateId" class="ms-2"></label>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="City" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>

            </div>
        </form>


    </div>
</div>


