@model Countries



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Country</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form action="Country/Delete" method="post">
            <div class="border p-3 mt-4">

                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="CountryId" disabled class="form-control border-0 shadow" />
                    <label asp-for="CountryId" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CountryName" disabled class="form-control border-0 shadow" />
                    <label asp-for="CountryName" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Country" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>



